{
  "name": {
    "en": "Aqara Vibration"
  },
  "class": "sensor",
  "capabilities": [
    "vibration_alarm",
    "tilt_alarm",
    "vibration_strength",
    "tilt_angle",
    "relative_tilt_angle",
    "measure_battery"
  ],
  "energy": {
    "batteries": [
      "CR2032"
    ]
  },
  "images": {
    "large": "{{driverAssetsPath}}/images/large.png",
    "small": "{{driverAssetsPath}}/images/small.png"
  },
  "icon": "{{driverAssetsPath}}/icon.svg",
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "repair": [
    {
      "id": "repair"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "General Settings"
      },
      "children": [
        {
          "id": "no_tilt_timeout",
          "type": "number",
          "label": {
            "en": "Tilt Alarm Timeout"
          },
          "min": 0,
          "value": 10,
          "hint": {
            "en": "Time after which the tilt alarm gets disabled after it has been triggered"
          },
          "units": {
            "en": "seconds"
          }
        }
      ]
    },
    {
      "type": "group",
      "label": {
        "en": "Hardware Settings"
      },
      "children": [
        {
          "id": "sensitivity",
          "type": "number",
          "label": {
            "en": "Sensitivity"
          },
          "min": 0,
          "max": 21,
          "value": 0,
          "hint": {
            "en": "Note that the sensitivity gets applied the next time the sensor performs a handshake with the conbee. This might take up to some time!"
          }
        },
        {
          "id": "pending",
          "type": "text",
          "label": {
            "en": "Pending settings"
          },
          "value": "UNKNOWN",
          "hint": {
            "en": "Hardware settings that are not yet applied to the sensor."
          }
        }
      ]
    },
    {
      "$extends":  "ignore-reachable"
    },
    {
      "$extends":  "info"
    }
  ]
}